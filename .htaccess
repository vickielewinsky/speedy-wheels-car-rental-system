# .htaccess for Speedy Wheels Car Rental System
DirectoryIndex index.php index.html

# Enable URL rewriting
RewriteEngine On

# Set the base directory for rewrites
RewriteBase /speedy-wheels-car-rental-system/

# Prevent directory listing
Options -Indexes

# If the requested file exists, serve it
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Redirect to clean URLs
RewriteRule ^login$ src/modules/auth/login.php [L]
RewriteRule ^register$ src/modules/auth/register.php [L]
RewriteRule ^logout$ src/modules/auth/logout.php [L]

# Main application routing
RewriteRule ^(.*)$ index.php [L,QSA]
